<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mixware.senpaimangareader2"
    android:versionCode="3"
    android:versionName="Alex Daily Version" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activities.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/sort_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mixware.senpaimangareader2.MangaList"
            android:label="@string/title_activity_manga_list" >
        </activity>
        <activity
            android:name=".Activities.CapituloList"
            android:label="@string/title_activity_capitulo_list" >
        </activity>
        <activity
            android:name=".Activities.MangaView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_manga_view"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <service
            android:name="com.mixware.senpaimangareader2.services.DownloadService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".Activities.OfflineViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_offline_viewer"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mixware.senpaimangareader2.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Activities.aboutJSOUP"
            android:label="@string/title_activity_about_jsoup" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.aboutPhotoView"
            android:label="@string/title_activity_about_photo_view" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name=".Activities.OnlineReaderAd"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_online_reader_ad"
            android:noHistory="true"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mixware.senpaimangareader2.activity_tablets"
            android:label="@string/title_activity_activity_tablets" >
        </activity>
    </application>

</manifest>
